{
  "name": "ts-playground",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:html-canvas": "bun run --cwd apps/html-canvas dev",
    "build:html-canvas": "bun run --cwd apps/html-canvas build",
    "start:html-canvas": "bun run --cwd apps/html-canvas start",
    "dev:agent-testing": "bun run --cwd apps/agent-testing dev",
    "build:agent-testing": "bun run --cwd apps/agent-testing build",
    "start:agent-testing": "bun run --cwd apps/agent-testing start",
    "docx-cli": "bun run --cwd apps/docx-cli start",
    "setup:docx-cli": "bun run --cwd apps/docx-cli setup"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "typescript": "^5.0.0"
  }
}
