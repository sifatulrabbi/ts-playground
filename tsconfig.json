{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["bun-types", "node"]
  },
  "exclude": ["node_modules", "dist", "archived"]
}
